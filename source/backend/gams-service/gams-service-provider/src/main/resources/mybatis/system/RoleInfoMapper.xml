<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fintech.gams.system.mapper.RoleInfoMapper">
    <!-- 基础列 -->
    <sql id="roleInfoColumns">
        a.ID as id,
        a.ROLE_CODE as roleCode,
        a.ROLE_NAME as roleName,
        a.ROLE_DEST as roleDest,
        a.CREATE_BY as createBy,
        a.CREATE_DATE as createDate,
        a.UPDATE_BY as updateBy,
        a.UPDATE_DATE as updateDate,
        a.NEEDGA as needga,
        a.DEL_FLAG as delFlag
    </sql>

    <resultMap id="roleInfoResultMap" type="com.fintech.gams.system.entity.RoleInfo">
        <id column="ID" property="id" />
        <result column="ROLE_CODE" property="roleCode"/>
        <result column="ROLE_NAME" property="roleName"/>
        <result column="ROLE_DEST" property="roleDest"/>
        <result column="CREATE_BY" property="createBy"/>
        <result column="CREATE_DATE" property="createDate"/>
        <result column="UPDATE_BY" property="updateBy"/>
        <result column="UPDATE_DATE" property="updateDate"/>
        <result column="NEEDGA" property="needga"/>
        <result column="DEL_FLAG" property="delFlag"/>
    </resultMap>

    <!-- 普通插入 -->
    <insert id="insert" parameterType="com.fintech.gams.system.entity.RoleInfo">
        INSERT INTO ROLE_INFO(
            ID ,
            ROLE_CODE ,
            ROLE_NAME ,
            ROLE_DEST ,
            CREATE_BY ,
            CREATE_DATE ,
            UPDATE_BY ,
            UPDATE_DATE ,
            NEEDGA ,
            DEL_FLAG 
        ) VALUES (
            #{id} ,
            #{roleCode} ,
            #{roleName} ,
            #{roleDest} ,
            #{createBy} ,
            #{createDate} ,
            #{updateBy} ,
            #{updateDate} ,
            #{needga} ,
            #{delFlag} 
        )
    </insert>
    <!-- 根据主键物理删除 -->
    <delete id="remove" parameterType="java.lang.Long">
        DELETE FROM ROLE_INFO WHERE ID = #{id}
    </delete>

    <!-- 根据主键逻辑删除 -->
    <update id="delete" parameterType="java.lang.Long">
        UPDATE ROLE_INFO SET DEL_FLAG = 1 WHERE ID = #{id}
    </update>

    <!--根据条件是否插入数据 -->
    <insert id="insertSelective" parameterType="com.fintech.gams.system.entity.RoleInfo">
        INSERT INTO ROLE_INFO
        <trim prefix="(" suffix=")" suffixOverrides=",">
        <if test="id != null">
                ID ,
        </if>
        <if test="roleCode != null">
                ROLE_CODE ,
        </if>
        <if test="roleName != null">
                ROLE_NAME ,
        </if>
        <if test="roleDest != null">
                ROLE_DEST ,
        </if>
        <if test="createBy != null">
                CREATE_BY ,
        </if>
        <if test="createDate != null">
                CREATE_DATE ,
        </if>
        <if test="updateBy != null">
                UPDATE_BY ,
        </if>
        <if test="updateDate != null">
                UPDATE_DATE ,
        </if>
        <if test="needga != null">
                NEEDGA ,
        </if>
        <if test="delFlag != null">
                DEL_FLAG 
        </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
        <if test="id != null">
                #{id} ,
        </if>
        <if test="roleCode != null">
                #{roleCode} ,
        </if>
        <if test="roleName != null">
                #{roleName} ,
        </if>
        <if test="roleDest != null">
                #{roleDest} ,
        </if>
        <if test="createBy != null">
                #{createBy} ,
        </if>
        <if test="createDate != null">
                #{createDate} ,
        </if>
        <if test="updateBy != null">
                #{updateBy} ,
        </if>
        <if test="updateDate != null">
                #{updateDate} ,
        </if>
        <if test="needga != null">
                #{needga} ,
        </if>
        <if test="delFlag != null">
                #{delFlag} 
        </if>
        </trim>
    </insert>

    <!-- 选择性更新数据 -->
    <update id="updateByPrimaryKeySelective" parameterType="com.fintech.gams.system.entity.RoleInfo">
        UPDATE ROLE_INFO
           <set>
            <if test="roleCode != null">
                ROLE_CODE = #{roleCode} ,
            </if>
            <if test="roleName != null">
                ROLE_NAME = #{roleName} ,
            </if>
            <if test="roleDest != null">
                ROLE_DEST = #{roleDest} ,
            </if>
            <if test="createBy != null">
                CREATE_BY = #{createBy} ,
            </if>
            <if test="createDate != null">
                CREATE_DATE = #{createDate} ,
            </if>
            <if test="updateBy != null">
                UPDATE_BY = #{updateBy} ,
            </if>
            <if test="updateDate != null">
                UPDATE_DATE = #{updateDate} ,
            </if>
            <if test="needga != null">
                NEEDGA = #{needga} ,
            </if>
            <if test="delFlag != null">
                DEL_FLAG = #{delFlag} 
            </if>
           </set>
        WHERE ID = #{id}
    </update>

    <!-- 批量插入 -->
    <insert id="insertBatch" parameterType="list">
        INSERT INTO ROLE_INFO(
            ID ,
            ROLE_CODE ,
            ROLE_NAME ,
            ROLE_DEST ,
            CREATE_BY ,
            CREATE_DATE ,
            UPDATE_BY ,
            UPDATE_DATE ,
            NEEDGA ,
            DEL_FLAG 
        )
        <foreach close=")" collection="list" item="item" index="index" open="(" separator="union">
            SELECT
            #{item.id} ,
            #{item.roleCode} ,
            #{item.roleName} ,
            #{item.roleDest} ,
            #{item.createBy} ,
            #{item.createDate} ,
            #{item.updateBy} ,
            #{item.updateDate} ,
            #{item.needga} ,
            #{item.delFlag} 
            FROM DUAL
        </foreach>
    </insert>

    <!-- 批量修改 -->
    <update id="updateBatch" parameterType="java.util.List">
        <foreach collection="list" item="item" index="index" open="begin" close=";end;" separator=";">
            UPDATE ROLE_INFO SET
            ROLE_CODE = #{item.roleCode} ,
            ROLE_NAME = #{item.roleName} ,
            ROLE_DEST = #{item.roleDest} ,
            CREATE_BY = #{item.createBy} ,
            CREATE_DATE = #{item.createDate} ,
            UPDATE_BY = #{item.updateBy} ,
            UPDATE_DATE = #{item.updateDate} ,
            NEEDGA = #{item.needga} ,
            DEL_FLAG = #{item.delFlag} 
            WHERE ID = #{item.id}
        </foreach>
    </update>

    <!-- 根据主键更新一条信息所有数据 -->
    <update id="updateByPrimaryKey" parameterType="com.fintech.gams.system.entity.RoleInfo">
        UPDATE ROLE_INFO SET
            ROLE_CODE = #{roleCode} ,
            ROLE_NAME = #{roleName} ,
            ROLE_DEST = #{roleDest} ,
            CREATE_BY = #{createBy} ,
            CREATE_DATE = #{createDate} ,
            UPDATE_BY = #{updateBy} ,
            UPDATE_DATE = #{updateDate} ,
            NEEDGA = #{needga} ,
            DEL_FLAG = #{delFlag} 
        WHERE ID = #{id}
    </update>

    <!-- 根据主键取数据 -->
    <select id="selectByPrimaryKey"  parameterType="java.lang.Long" resultType="com.fintech.gams.system.entity.RoleInfo">
        SELECT <include refid="roleInfoColumns"/> FROM ROLE_INFO a WHERE a.ID = #{id}
    </select>

    <!-- 可分页的对象查询 -->
    <select id="findList" resultType="com.fintech.gams.system.entity.RoleInfo">
        SELECT
        <include refid="roleInfoColumns"/>
        FROM ROLE_INFO a WHERE a.DEL_FLAG = 0
        <if test="roleCode != null">
            AND a.ROLE_CODE LIKE '%'||#{roleCode}||'%'
        </if>
        <if test="roleName != null">
            AND a.ROLE_NAME LIKE '%'||#{roleName}||'%'
        </if>
    </select>

    <!-- 查询所有 -->
    <select id="selectAll" resultType="com.fintech.gams.system.entity.RoleInfo">
        SELECT
        <include refid="roleInfoColumns"/>
        FROM ROLE_INFO a WHERE a.DEL_FLAG = 0
    </select>

    <select id="findByUserId" resultType="com.fintech.gams.system.entity.RoleInfo">
        SELECT
        <include refid="roleInfoColumns"/>
        FROM ROLE_INFO a ,USER_ROLE b
        WHERE a.ID = b.ROLE_ID AND a.DEL_FLAG = 0
        AND b.USER_ID = #{userId}
    </select>

</mapper>

